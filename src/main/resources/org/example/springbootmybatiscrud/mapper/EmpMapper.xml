<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springbootmybatiscrud.mapper.EmpMapper">

<!--    resultType:单条数据返回的类型-->
    <select id="getById" resultType="org.example.springbootmybatiscrud.POJO.emp">
        select * from emp where id=#{id}
    </select>


    <select id="select" resultType="org.example.springbootmybatiscrud.POJO.emp">
        select *
        from emp
        <where>
        <if test="gender != null">
            gender = #{gender}
        </if>
        <if test="age != null">
            and age > #{age}
        </if>
        </where>

    </select>


    <update id="update">
        update emp
        <set>
            <if test="id != null">id=#{id},</if>
            <if test="workNo != null">workNo=#{workNo},</if>
            <if test="name != null">name=#{name},</if>
            <if test="gender != null">gender=#{gender},</if>
            <if test="age != null">age=#{age},</if>
            <if test="idCard != null">idCard=#{idCard}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteByIds">
        delete from emp where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
</mapper>